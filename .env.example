# ==========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ==========================================

# Ambiente
NODE_ENV=development

# Servidor
PORT=3000
API_URL=http://localhost:3000

# ==========================================
# DATABASE (MySQL)
# ==========================================
DATABASE_URL="mysql://auth_user:auth_password_dev@localhost:3306/secure_auth_db"

# ==========================================
# REDIS (Cache & Blacklist)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_TTL_DEFAULT=900

# ==========================================
# JWT & SEGURANÇA
# ==========================================

# Secrets (MUDAR EM PRODUÇÃO - Gerar com: openssl rand -base64 32)
JWT_ACCESS_SECRET=CHANGE_THIS_IN_PRODUCTION_ACCESS_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_REFRESH_SECRET_MIN_32_CHARS
CSRF_SECRET=CHANGE_THIS_IN_PRODUCTION_CSRF_SECRET_MIN_32_CHARS

# Tempos de Expiração
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Refresh Token Rotation
REFRESH_GRACE_PERIOD_SECONDS=10

# ==========================================
# ARGON2 (Hashing de Senhas)
# ==========================================
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=4

# ==========================================
# RATE LIMITING
# ==========================================

# Login Rate Limit (por IP)
RATE_LIMIT_LOGIN_IP_MAX=5
RATE_LIMIT_LOGIN_IP_WINDOW_SECONDS=60

# Login Rate Limit (por Email)
RATE_LIMIT_LOGIN_EMAIL_MAX=3
RATE_LIMIT_LOGIN_EMAIL_WINDOW_SECONDS=60

# Rate Limit Global (por IP)
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_GLOBAL_WINDOW_SECONDS=60

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:5173

# ==========================================
# COOKIES
# ==========================================
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict
